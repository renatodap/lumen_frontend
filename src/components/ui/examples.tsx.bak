/**
 * Checkbox Examples
 */
export function CheckboxExamples() {
  const [checked, setChecked] = useState(false);
  const [indeterminate, setIndeterminate] = useState(true);

  return (
    <div className="space-y-4 p-6">
      <h2 className="text-2xl font-bold text-foreground">Checkbox Examples</h2>

      {/* Basic Checkbox */}
      <Checkbox
        label="Accept terms and conditions"
        checked={checked}
        onChange={(e) => setChecked(e.target.checked)}
      />

      {/* Indeterminate State */}
      <Checkbox
        label="Select all items"
        checked={checked}
        indeterminate={indeterminate}
        onChange={(e) => {
          setChecked(e.target.checked);
          setIndeterminate(false);
        }}
      />

      {/* With Error */}
      <Checkbox
        label="Required checkbox"
        error="You must accept to continue"
      />

      {/* Disabled */}
      <Checkbox
        label="Disabled checkbox"
        disabled
      />
    </div>
  );
}

/**
 * Modal Examples
 */
export function ModalExamples() {
  const [centerOpen, setCenterOpen] = useState(false);
  const [sheetOpen, setSheetOpen] = useState(false);
  const [fullscreenOpen, setFullscreenOpen] = useState(false);

  return (
    <div className="space-y-4 p-6">
      <h2 className="text-2xl font-bold text-foreground">Modal Examples</h2>

      <div className="flex gap-2">
        <Button onClick={() => setCenterOpen(true)}>Center Modal</Button>
        <Button onClick={() => setSheetOpen(true)}>Bottom Sheet</Button>
        <Button onClick={() => setFullscreenOpen(true)}>Fullscreen</Button>
      </div>

      <Modal
        open={centerOpen}
        onClose={() => setCenterOpen(false)}
        variant="center"
        title="Center Modal"
      >
        <p className="text-foreground">This is a centered modal</p>
      </Modal>

      <Modal
        open={sheetOpen}
        onClose={() => setSheetOpen(false)}
        variant="bottom-sheet"
        title="Bottom Sheet"
      >
        <p className="text-foreground">This is a bottom sheet modal</p>
      </Modal>

      <Modal
        open={fullscreenOpen}
        onClose={() => setFullscreenOpen(false)}
        variant="fullscreen"
        title="Fullscreen Modal"
      >
        <p className="text-foreground">This is a fullscreen modal</p>
      </Modal>
    </div>
  );
}

/**
 * DatePicker Examples
 */
export function DatePickerExamples() {
  const [date, setDate] = useState<Date>(new Date());
  const [modalDate, setModalDate] = useState<Date>();

  return (
    <div className="space-y-4 p-6">
      <h2 className="text-2xl font-bold text-foreground">DatePicker Examples</h2>

      {/* Inline DatePicker */}
      <DatePicker
        variant="inline"
        label="Select a date"
        value={date}
        onChange={setDate}
      />

      {/* Modal DatePicker */}
      <DatePicker
        variant="modal"
        label="Pick a date"
        value={modalDate}
        onChange={setModalDate}
      />

      {/* With Min/Max Dates */}
      <DatePicker
        variant="inline"
        label="Date range"
        value={date}
        onChange={setDate}
        minDate={new Date()}
        maxDate={new Date(Date.now() + 30 * 24 * 60 * 60 * 1000)}
      />
    </div>
  );
}

/**
 * Select Examples
 */
export function SelectExamples() {
  const [value, setValue] = useState('');

  const options = [
    { value: '1', label: 'Option 1' },
    { value: '2', label: 'Option 2' },
    { value: '3', label: 'Option 3' },
    { value: '4', label: 'Option 4 (Disabled)', disabled: true },
  ];

  return (
    <div className="space-y-4 p-6">
      <h2 className="text-2xl font-bold text-foreground">Select Examples</h2>

      <Select
        label="Choose an option"
        options={options}
        value={value}
        onChange={setValue}
        placeholder="Select..."
      />

      <Select
        label="With error"
        options={options}
        value={value}
        onChange={setValue}
