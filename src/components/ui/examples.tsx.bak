}

/**
 * Toast Examples
 */
export function ToastExamples() {
  const [toasts, setToasts] = useState<Array<{ id: number; variant: any; message: string }>>([]);

  const addToast = (variant: 'success' | 'error' | 'info' | 'warning', message: string) => {
    const id = Date.now();
    setToasts([...toasts, { id, variant, message }]);
  };

  return (
    <div className="space-y-4 p-6">
      <h2 className="text-2xl font-bold text-foreground">Toast Examples</h2>

      <div className="flex gap-2">
        <Button
          variant="primary"
          size="sm"
          onClick={() => addToast('success', 'Operation successful!')}
        >
          Success Toast
        </Button>
        <Button
          variant="primary"
          size="sm"
          onClick={() => addToast('error', 'Something went wrong!')}
        >
          Error Toast
        </Button>
        <Button
          variant="primary"
          size="sm"
          onClick={() => addToast('info', 'Here is some information')}
        >
          Info Toast
        </Button>
        <Button
          variant="primary"
          size="sm"
          onClick={() => addToast('warning', 'Warning: Please check this')}
        >
          Warning Toast
        </Button>
      </div>

      <ToastContainer position="top-right">
        {toasts.map((toast) => (
          <Toast
            key={toast.id}
            variant={toast.variant}
            message={toast.message}
            duration={3000}
            onClose={() => setToasts(toasts.filter(t => t.id !== toast.id))}
          />
        ))}
      </ToastContainer>
    </div>
  );
}

