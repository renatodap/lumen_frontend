/**
 * Button Examples
 */
export function ButtonExamples() {
  const [loading, setLoading] = useState(false);

  const handleClick = () => {
    setLoading(true);
    setTimeout(() => setLoading(false), 2000);
  };

  return (
    <div className="space-y-4 p-6">
      <h2 className="text-2xl font-bold text-foreground">Button Examples</h2>

      {/* Primary Buttons */}
      <div className="flex gap-2">
        <Button variant="primary" size="sm">Small Primary</Button>
        <Button variant="primary" size="md">Medium Primary</Button>
        <Button variant="primary" size="lg">Large Primary</Button>
      </div>

      {/* Secondary Buttons */}
      <div className="flex gap-2">
        <Button variant="secondary" size="md">Secondary</Button>
        <Button variant="ghost" size="md">Ghost</Button>
      </div>

      {/* With Icons */}
      <div className="flex gap-2">
        <Button
          variant="primary"
          leftIcon={<span>+</span>}
        >
          Add Item
        </Button>
        <Button
          variant="secondary"
          rightIcon={<span>‚Üí</span>}
        >
          Next
        </Button>
      </div>

      {/* Loading State */}
      <div className="flex gap-2">
        <Button variant="primary" loading={loading} onClick={handleClick}>
          {loading ? 'Processing...' : 'Click to Load'}
        </Button>
      </div>

      {/* Full Width */}
      <Button variant="primary" fullWidth>Full Width Button</Button>
    </div>
  );
}

/**
 * Input Examples
 */
export function InputExamples() {
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');

  const validateEmail = (value: string) => {
    if (!value.includes('@')) return 'Please enter a valid email';
    return undefined;
  };

  return (
    <div className="space-y-4 p-6">
      <h2 className="text-2xl font-bold text-foreground">Input Examples</h2>

      {/* Basic Input */}
      <Input
        label="Name"
        placeholder="Enter your name"
        helperText="This is a helper text"
      />

      {/* Email with Validation */}
      <Input
        type="email"
        label="Email"
        placeholder="email@example.com"
        value={email}
        onChange={(e) => setEmail(e.target.value)}
        validate={validateEmail}
      />

      {/* Password */}
      <Input
        type="password"
        label="Password"
        placeholder="Enter your password"
        value={password}
        onChange={(e) => setPassword(e.target.value)}
      />

      {/* With Icons */}
      <Input
        label="Search"
        placeholder="Search..."
        leftIcon={<span>üîç</span>}
      />

      {/* With Error */}
      <Input
        label="Username"
        placeholder="Enter username"
        error="Username is already taken"
      />
    </div>
  );
}

